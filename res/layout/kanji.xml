<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/canvas">

    <ImageView
        android:id="@+id/mos_kanji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/acepta_kanji"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:contentDescription="@string/title_kanji" />

    <ImageButton
        android:id="@+id/acepta_kanji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:background="#10000000"
        android:contentDescription="@string/title_kanji"
        android:scaleType="fitXY"
        android:src="@drawable/aceptar_kanji_com" />

</RelativeLayout>