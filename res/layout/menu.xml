<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/acti_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/title_activity_menu"
        android:scaleType="fitXY"
        android:src="@drawable/encabezado_inicio" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/linea_menu"
            android:contentDescription="@string/title_activity_menu" />

        <Button
            android:id="@+id/inicio"
            android:layout_width="74dp"
            android:layout_height="27dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/inicio" />

        <Button
            android:id="@+id/avances"
            android:layout_width="127dp"
            android:layout_height="27dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/avances" />

        <Button
            android:id="@+id/guia"
            android:layout_width="68dp"
            android:layout_height="27dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/guia" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/linea_menu"
            android:contentDescription="@string/title_activity_menu" />
    </LinearLayout>

</LinearLayout>